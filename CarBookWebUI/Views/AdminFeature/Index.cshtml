@model List<ResultFeatureDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="page-content">
    <div class="container-fluid">

        <!-- start page title -->
        <div class="row">
            <div class="col-xl-12">
                <div class="Featured">
                    <div class="Featured-body">
                        <h4 class="Featured-title">Features Features</h4>
                        <div class="table-responsive">
                            <table class="table mb-0">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Feature</th>
                                        <th>Delete</th>
                                        <th>Update</th>
                                        <th>Detail</th>
                                        <th>See in the site</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        count++;
                                        <tr>
                                            <th scope="row">@count</th>
                                            <td>@item.Name</td>
                                            <td><a href="/AdminFeature/RemoveFeature/@item.FeatureID" class="btn btn-outline-danger">Delete</a></td>
                                            <td><a href="/AdminFeature/UpdateFeature/@item.FeatureID" class="btn btn-outline-success">Update</a></td>
                                            <td><a href="/FeatureList/FeatureDetail/@item.FeatureID" class="btn btn-outline-dart">Detail</a></td>
                                            <td><a href="/FeatureList/FeatureDetail/@item.FeatureID" class="btn btn-outline-dart">See in the site</a></td>
                                        </tr>
                                    }

                                </tbody>
                            </table>
                            <td><a href="/AdminFeature/CreateFeature" class="btn btn-outline-primary">New Feature</a></td>

                        </div>

                    </div>
                    <!-- end Featured-body-->
                </div>
                <!-- end Featured -->

            </div>
            <!-- end col -->
        </div>

        <!-- end page title -->

    </div> <!-- container-fluid -->
</div>



