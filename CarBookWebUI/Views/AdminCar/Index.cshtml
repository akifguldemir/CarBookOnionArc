@model List<ResultCarPricingWithBrandDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="page-content">
    <div class="container-fluid">

        <!-- start page title -->
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Cars</h4>
                        <div class="table-responsive">
                            <table class="table mb-0">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Brand</th>
                                        <th>Model</th>
                                        <th>Transmission</th>
                                        <th>KM</th>
                                        <th>Delete</th>
                                        <th>Update</th>
                                        <th>Detail</th>
                                        <th>See in the site</th>
                                        <th>Prices</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach(var item in Model)
                                    {
                                        count++;
                                        <tr>
                                            <th scope="row">@count</th>
                                            <td>@item.BrandName</td>
                                            <td>@item.Model</td>
                                            <td>@item.Transmission</td>
                                            <td>@item.Km</td>
                                            <td><a href="/AdminCar/RemoveCar/@item.CarID" class="btn btn-outline-danger">Delete</a></td>
                                            <td><a href="/AdminCar/UpdateCar/@item.CarID" class="btn btn-outline-success">Update</a></td>
                                            <td><a href="/CarList/CarDetail/@item.CarID" class="btn btn-outline-dart">Detail</a></td>
                                            <td><a href="/CarList/CarDetail/@item.CarID" class="btn btn-outline-dart">See in the site</a></td>
                                            <td><a href="/CarList/CarDetail/@item.CarID" class="btn btn-outline-secondary">Prices</a></td>
                                        </tr>
                                    }

                                </tbody>
                            </table>
                            <td><a href="/AdminCar/CreateCar" class="btn btn-outline-primary">New Car</a></td>

                        </div>

                    </div>
                    <!-- end card-body-->
                </div>
                <!-- end card -->

            </div>
            <!-- end col -->
        </div>

        <!-- end page title -->

    </div> <!-- container-fluid -->
</div>


