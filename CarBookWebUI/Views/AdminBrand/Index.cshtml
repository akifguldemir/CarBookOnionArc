@model List<ResultBrandDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="page-content">
    <div class="container-fluid">

        <!-- start page title -->
        <div class="row">
            <div class="col-xl-12">
                <div class="Brandd">
                    <div class="Brandd-body">
                        <h4 class="Brandd-title">Brands Brands</h4>
                        <div class="table-responsive">
                            <table class="table mb-0">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Brand</th>
                                        <th>Delete</th>
                                        <th>Update</th>
                                        <th>Cars</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        count++;
                                        <tr>
                                            <th scope="row">@count</th>
                                            <td>@item.Name</td>
                                            <td><a href="/AdminBrand/RemoveBrand/@item.BrandID" class="btn btn-outline-danger">Delete</a></td>
                                            <td><a href="/AdminBrand/UpdateBrand/@item.BrandID" class="btn btn-outline-success">Update</a></td>
                                            <td><a href="/BrandList/BrandDetail/@item.BrandID" class="btn btn-outline-dart">Cars</a></td>
                                        </tr>
                                    }

                                </tbody>
                            </table>
                        <td><a href="/AdminBrand/CreateBrand" class="btn btn-outline-primary">New Brand</a></td>

                        </div>

                        </div>
                        <!-- end Brandd-body-->
                        </div>
                        <!-- end Brandd -->
                        </div>
                        <!-- end col -->
                        </div>

                        <!-- end page title -->
                        </div> <!-- container-fluid -->
    </div>




